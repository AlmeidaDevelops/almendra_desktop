### Variables
set $mod Mod4
set $term alacritty
set $menu wofi --show drun

exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

output * bg "#000000" solid_color
exec_always ~/dotfiles/scripts/wallpaper_rotator.sh --init
output eDP-1 enable

### Include fragments
include ~/dotfiles/themes/current/sway-colors
include config.d/*

### Input configuration
input type:keyboard {
    xkb_layout latam
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
}

input type:pointer {
    natural_scroll enabled
}

# Bar (Waybar) - delay to ensure Wayland socket is ready
exec_always bash -c "sleep 1 && pkill waybar; waybar &"

include /etc/sway/config.d/*
