### Variables
set $mod Mod4
set $term alacritty
set $menu wofi --show drun

exec dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP=sway

### Output
exec_always ~/dotfiles/scripts/wallpaper_rotator.sh --init

### Include fragments
include themes/default/colors
include config.d/*

### Input configuration
input type:keyboard {
    xkb_layout latam
}

input type:touchpad {
    tap enabled
    natural_scroll enabled
}

input type:pointer {
    natural_scroll enabled
}

# Bar
bar {
    swaybar_command waybar
}

include /etc/sway/config.d/*
